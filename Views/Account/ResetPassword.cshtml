@model ForgotPassword
@{
    ViewData["Title"] = "ResetPassword";
}

<form class="form-signin" method="post">
    <div class="text-center mb-4">
        <div class="form-label-group">
            <input hidden asp-for="User.Email" />
            <input hidden asp-for="Token" />
            <input asp-for="Password" class="form-control" placeholder="Enter new password">
            <input asp-for="ConfirmPassword" class="form-control" placeholder="Enter password new">
            <label for="inputEmail">Reset Password</label>
        </div>
    </div>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Reset</button>
</form>