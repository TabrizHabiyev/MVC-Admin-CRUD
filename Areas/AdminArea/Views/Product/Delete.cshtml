@model Product
@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="row">
        <div class="col-6">
            <img src="~/img/@Model.ImageUrl" />
            <p>price:@Model.Price</p>
            <p>name:@Model.Name</p>
        </div>
        <div class="col-6">
            <a asp-controller="Product" asp-action="Index" class="btn btn-warning">Go Back</a>
        </div>
        <form class="forms-sample mt-3" method="Post">
            <button class="btn btn-light">Delete</button>
        </form>
    </div>
</div>

