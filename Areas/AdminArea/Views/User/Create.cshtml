@model RegisterVM
@{ ViewData["Title"] = "Index"; }

                            <h4>Create User</h4>
                            <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
                            <form method="post" >
                                <div class="form-group">
                                    <input asp-for="FullName" class="form-control form-control-lg" placeholder="Fullname"><br />
                                    <span asp-validation-for="FullName" class="text text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="UserName" class="form-control form-control-lg" placeholder="Username"><br />
                                    <span asp-validation-for="UserName" class="text text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="Email" class="form-control form-control-lg" placeholder="Email"><br />
                                    <span asp-validation-for="Email" class="text text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="Password" class="form-control form-control-lg" placeholder="Password"><br />
                                    <span asp-validation-for="Password" class="text text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="ConfirmPassword" class="form-control form-control-lg" placeholder="Confirm Password"><br />
                                    <span asp-validation-for="ConfirmPassword" class="text text-danger"></span>
                                </div>

                                <div class="mb-2 mt-3">
                                    <button type="submit" class="btn btn-block btn btn-outline-primary auth-form-btn">
                                                 Create
                                    </button>
                                </div>
                               
                            </form>